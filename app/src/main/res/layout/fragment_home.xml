<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:id="@+id/home_fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:weightSum="30"
        android:orientation="vertical"
        android:gravity="center_vertical"
        android:paddingHorizontal="32dp"
        android:paddingVertical="48dp"
        android:background="@drawable/home_page_bg"
        android:backgroundTintMode="screen">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animationGallery"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:layout_marginVertical="40dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_gallery" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animationCloud"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="7.5"
            android:layout_marginVertical="40dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_cloud" />

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottie_animationCamera"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="15"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/lottie_camera" />

    </LinearLayout>
</RelativeLayout>